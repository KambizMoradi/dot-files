# browser
super + b
    run_brave.sh

super + f
    run_firefox.sh

# clipboard
super + c
    copy_clipboard.sh

super + v
    paste_clipboard.sh

super + a
	anki

alt + p
    dmenu_run -n -b -i -f -l 10 -nb black -nf white -sf white

super + o
    obsidian

super + z
    zotero

super + m
    sync_neomutt.sh

super + r
    voice_recording.sh toggle_record

super + R
    voice_recording.sh toggle_play

super + p
    passmenu -n -b -i -f -l 5 -nb black -nf white -sf white -sb red

@Print
    screenshot.sh

super + space
    change_key_layout.sh

#################################### EXTERNAL KEYBOARD

# browser for external keyboard
# Volume Control
alt + F12
    config_volume.sh + 10

alt + F11
    config_volume.sh - 10

# brightness
XF86MonBrightnessUp
    set_display_brightness.sh $main_display $(echo "$(cat /tmp/display_brightness) + 0.1" | bc)

XF86MonBrightnessDown
    set_display_brightness.sh $main_display $(echo "$(cat /tmp/display_brightness) - 0.1" | bc)
