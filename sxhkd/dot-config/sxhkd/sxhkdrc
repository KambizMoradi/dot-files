# browser
super + b
    run_brave.sh

super + f
    run_firefox.sh

# clipboard
super + c
    copy_clipboard.sh

super + v
    paste_clipboard.sh

super + a
	anki

alt + p
    dmenu_run -n -b -i -f -l 10 -nb black -nf white -sf white

super + o
    obsidian

super + z
    zotero

super + p
    passmenu -n -b -i -f -l 5 -nb black -nf white -sf white -sb red

@Print
    scrot --silent --ignorekeyboard --quality 100 --select "$screenshots_directory/%Y-%m-%d-%H-%M-%S.png" -e "xclip -selection clipboard -t image/png -i $screenshots_directory/%Y-%m-%d-%H-%M-%S.png;"

super + space
    change_key_layout.sh

